<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AndroidActivity">

    <ScrollView
        android:id="@+id/history_scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/value_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/value_history_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="bottom|end"
            android:maxLines="1000"
            android:textSize="24sp"
            android:typeface="monospace"
            tools:text="3132 *\n6465456 =\n-84654 +" />
    </ScrollView>

    <TextView
        android:id="@+id/value_text_view"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical|end"
        android:text="0"
        android:textColor="@android:color/black"
        android:textSize="32sp"
        android:typeface="monospace"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/number_constraint_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="13456" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/number_constraint_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <android.support.constraint.Guideline
            android:id="@+id/vertical_25_percent_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25" />

        <android.support.constraint.Guideline
            android:id="@+id/vertical_50_percent_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <android.support.constraint.Guideline
            android:id="@+id/vertical_75_percent_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75" />

        <android.support.constraint.Guideline
            android:id="@+id/horizontal_20_percent_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2" />

        <android.support.constraint.Guideline
            android:id="@+id/horizontal_40_percent_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4" />

        <android.support.constraint.Guideline
            android:id="@+id/horizontal_60_percent_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.6" />

        <android.support.constraint.Guideline
            android:id="@+id/horizontal_80_percent_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.8" />

        <Button
            android:id="@+id/ce_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="onClickCEButton"
            android:text="CE"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/horizontal_20_percent_guideline"
            app:layout_constraintEnd_toStartOf="@+id/vertical_25_percent_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/c_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="onClickCButton"
            android:text="C"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/horizontal_20_percent_guideline"
            app:layout_constraintEnd_toStartOf="@+id/vertical_50_percent_guideline"
            app:layout_constraintStart_toStartOf="@+id/vertical_25_percent_guideline"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/del_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="onClickDelButton"
            android:text="del"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/horizontal_20_percent_guideline"
            app:layout_constraintEnd_toStartOf="@+id/vertical_75_percent_guideline"
            app:layout_constraintStart_toStartOf="@+id/vertical_50_percent_guideline"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/div_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="onClickButtonOperation"
            android:text="/"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/horizontal_20_percent_guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/vertical_75_percent_guideline"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/seven_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="onClickNumberButton"
            android:text="7"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/horizontal_40_percent_guideline"
            app:layout_constraintEnd_toStartOf="@+id/vertical_25_percent_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/horizontal_20_percent_guideline" />

        <Button
            android:id="@+id/eight_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="onClickNumberButton"
            android:text="8"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/horizontal_40_percent_guideline"
            app:layout_constraintEnd_toStartOf="@+id/vertical_50_percent_guideline"
            app:layout_constraintStart_toStartOf="@+id/vertical_25_percent_guideline"
            app:layout_constraintTop_toTopOf="@+id/horizontal_20_percent_guideline" />

        <Button
            android:id="@+id/nine_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="onClickNumberButton"
            android:text="9"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/horizontal_40_percent_guideline"
            app:layout_constraintEnd_toStartOf="@+id/vertical_75_percent_guideline"
            app:layout_constraintStart_toStartOf="@+id/vertical_50_percent_guideline"
            app:layout_constraintTop_toTopOf="@+id/horizontal_20_percent_guideline" />

        <Button
            android:id="@+id/mul_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="onClickButtonOperation"
            android:text="*"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/horizontal_40_percent_guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/vertical_75_percent_guideline"
            app:layout_constraintTop_toTopOf="@+id/horizontal_20_percent_guideline" />

        <Button
            android:id="@+id/four_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="onClickNumberButton"
            android:text="4"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/horizontal_60_percent_guideline"
            app:layout_constraintEnd_toStartOf="@+id/vertical_25_percent_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/horizontal_40_percent_guideline" />

        <Button
            android:id="@+id/five_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="onClickNumberButton"
            android:text="5"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/horizontal_60_percent_guideline"
            app:layout_constraintEnd_toStartOf="@+id/vertical_50_percent_guideline"
            app:layout_constraintStart_toStartOf="@+id/vertical_25_percent_guideline"
            app:layout_constraintTop_toTopOf="@+id/horizontal_40_percent_guideline" />

        <Button
            android:id="@+id/six_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="onClickNumberButton"
            android:text="6"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/horizontal_60_percent_guideline"
            app:layout_constraintEnd_toStartOf="@+id/vertical_75_percent_guideline"
            app:layout_constraintStart_toStartOf="@+id/vertical_50_percent_guideline"
            app:layout_constraintTop_toTopOf="@+id/horizontal_40_percent_guideline" />

        <Button
            android:id="@+id/sub_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="onClickButtonOperation"
            android:text="-"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/horizontal_60_percent_guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/vertical_75_percent_guideline"
            app:layout_constraintTop_toTopOf="@+id/horizontal_40_percent_guideline" />

        <Button
            android:id="@+id/one_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="onClickNumberButton"
            android:text="1"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/horizontal_80_percent_guideline"
            app:layout_constraintEnd_toStartOf="@+id/vertical_25_percent_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/horizontal_60_percent_guideline" />

        <Button
            android:id="@+id/two_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="onClickNumberButton"
            android:text="2"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/horizontal_80_percent_guideline"
            app:layout_constraintEnd_toStartOf="@+id/vertical_50_percent_guideline"
            app:layout_constraintStart_toStartOf="@+id/vertical_25_percent_guideline"
            app:layout_constraintTop_toTopOf="@+id/horizontal_60_percent_guideline" />

        <Button
            android:id="@+id/three_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="onClickNumberButton"
            android:text="3"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/horizontal_80_percent_guideline"
            app:layout_constraintEnd_toStartOf="@+id/vertical_75_percent_guideline"
            app:layout_constraintStart_toStartOf="@+id/vertical_50_percent_guideline"
            app:layout_constraintTop_toTopOf="@+id/horizontal_60_percent_guideline" />

        <Button
            android:id="@+id/add_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="onClickButtonOperation"
            android:text="+"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/horizontal_80_percent_guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/vertical_75_percent_guideline"
            app:layout_constraintTop_toTopOf="@+id/horizontal_60_percent_guideline" />

        <Button
            android:id="@+id/neg_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="onClickNegButton"
            android:text="Â±"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/vertical_25_percent_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/horizontal_80_percent_guideline" />

        <Button
            android:id="@+id/zero_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="onClickNumberButton"
            android:text="0"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/vertical_50_percent_guideline"
            app:layout_constraintStart_toStartOf="@+id/vertical_25_percent_guideline"
            app:layout_constraintTop_toTopOf="@+id/horizontal_80_percent_guideline" />

        <Button
            android:id="@+id/point_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="onClickPointButton"
            android:text="."
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/vertical_75_percent_guideline"
            app:layout_constraintStart_toStartOf="@+id/vertical_50_percent_guideline"
            app:layout_constraintTop_toTopOf="@+id/horizontal_80_percent_guideline" />

        <Button
            android:id="@+id/exec_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="onClickButtonExec"
            android:text="="
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/vertical_75_percent_guideline"
            app:layout_constraintTop_toTopOf="@+id/horizontal_80_percent_guideline" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>